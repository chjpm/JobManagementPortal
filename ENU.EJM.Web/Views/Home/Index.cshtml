@{
    ViewBag.Title = "Home Page";
}
<style>
    .header {
        padding: 60px;
        text-align: center;
        background: #1abc9c;
        color: white;
    }

</style>
<div class="header">
    <h1>Engineering Job Management Portal</h1>
    <p></p>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Job Management</h2>
        <p>
            Job Management allow you to create and manage job requests against customer service requests. It is a role of Call center employee.
        </p>
        @*<p><a class="btn btn-default" href="Jobs/Index">Job Management &raquo;</a></p>*@
        <p>@Html.ActionLink("Job Management", "Index", "Job", "", new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-3">
        <h2>Managing Engineers</h2>
        <p>This section usually managed by a supervisor to allocate jobs to the engineers.</p>
        <p>@Html.ActionLink("Supervisor Actions", "JobsActivity", "Supervisor", "", new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-3">
        <h2>Engineer Activities</h2>
        <p>This section nomally managed by an Engineer. An engineer can accept or update his/her job status.</p>
        <p>@Html.ActionLink("Engineer Actions", "#", "#", "", new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-3">
        <h2>Admin Section</h2>
        <p>This section nomally managed by administrator of this website.</p>
        <p>@Html.ActionLink("Administrator", "MapEngineer", "Admin", "", new { @class = "btn btn-primary" })</p>
    </div>
</div>
